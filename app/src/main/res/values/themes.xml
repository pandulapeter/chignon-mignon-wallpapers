<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Splash" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="windowSplashScreenBackground">@color/brand_yellow</item>
        <item name="postSplashScreenTheme">@style/ChignonMignon</item>
    </style>

    <style name="ChignonMignon" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/overlay_navigation</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="colorPrimary">@color/brand_yellow</item>
        <item name="colorOnPrimary">@color/brand_text</item>
        <item name="colorSecondary">@color/brand_white</item>
        <item name="colorOnSecondary">@color/brand_text</item>
        <item name="colorControlNormal">@color/brand_text</item>
        <item name="fontFamily">@font/barlow_regular</item>
    </style>

</resources>