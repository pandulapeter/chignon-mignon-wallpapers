<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/button_website"
            style="@style/AboutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_button_website"
            app:drawableStartCompat="@drawable/ic_website"
            app:layout_constraintEnd_toStartOf="@id/button_facebook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/button_email"
            style="@style/AboutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_button_email"
            app:drawableStartCompat="@drawable/ic_email"
            app:layout_constraintEnd_toStartOf="@id/button_instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_website" />

        <TextView
            android:id="@+id/button_facebook"
            style="@style/AboutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_button_facebook"
            app:drawableStartCompat="@drawable/ic_facebook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_website"
            app:layout_constraintTop_toTopOf="@id/button_website" />

        <TextView
            android:id="@+id/button_instagram"
            style="@style/AboutButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/about_button_instagram"
            app:drawableStartCompat="@drawable/ic_instagram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_email"
            app:layout_constraintTop_toTopOf="@id/button_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>