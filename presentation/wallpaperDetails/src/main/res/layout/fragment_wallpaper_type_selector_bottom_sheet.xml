<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            style="@style/Card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/wallpaper_details_bottom_sheet_bottom_negative_margin"
            app:shapeAppearanceOverlay="@style/RoundedTopCorners">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/wallpaper_details_bottom_sheet_bottom_margin">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/double_content_padding"
                    android:paddingTop="@dimen/double_content_padding"
                    android:paddingBottom="@dimen/content_padding"
                    android:text="@string/wallpaper_details_apply_wallpaper"
                    android:textAppearance="@style/BodyLargeTextAppearance"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/content_padding"
                    android:background="?selectableItemBackground"
                    android:paddingHorizontal="@dimen/double_content_padding"
                    android:paddingVertical="@dimen/double_content_padding"
                    android:text="@string/wallpaper_details_apply_wallpaper_home_screen"
                    android:textAppearance="@style/BodyMediumTextAppearance" />

                <TextView
                    android:id="@+id/lock_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:paddingHorizontal="@dimen/double_content_padding"
                    android:paddingVertical="@dimen/double_content_padding"
                    android:text="@string/wallpaper_details_apply_wallpaper_lock_screen"
                    android:textAppearance="@style/BodyMediumTextAppearance" />

                <TextView
                    android:id="@+id/both"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/content_padding"
                    android:background="?selectableItemBackground"
                    android:paddingHorizontal="@dimen/double_content_padding"
                    android:paddingVertical="@dimen/double_content_padding"
                    android:text="@string/wallpaper_details_apply_wallpaper_both"
                    android:textAppearance="@style/BodyMediumTextAppearance" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

</layout>